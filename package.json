{
  "name": "pkolt_web_site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "start": "astro dev --port 3007",
    "build": "astro build && npm run build-sw",
    "preview": "astro preview --port 3008",
    "build-sw": "esbuild ./src/service-worker.ts ./src/service-worker-register.ts --bundle --minify --tsconfig=tsconfig.sw.json --outdir=./out --banner:js=//ver.`date +%s`",
    "pwa-splash": "pwa-asset-generator ./public/images/pwa/512.png ./public/images/pwa/splash --background \"#ffffff\" --index ./src/pwa.html --path-override /images/pwa/splash --portrait-only --splash-only --no-sandbox",
    "ts-check": "tsc --noEmit",
    "js-check": "eslint --ext .tsx,.ts,.astro src",
    "js-fix": "npm run js-check -- --fix",
    "css-check": "stylelint 'src/**/*.css'",
    "css-fix": "npm run css-check -- --fix",
    "format": "prettier --check src",
    "format-fix": "prettier --write src",
    "all-check": "npm run js-check && npm run format && npm run css-check && npx knip",
    "all-fix": "npm run js-fix && npm run format-fix && npm run css-fix",
    "prepare": "git config core.hooksPath .git-hooks",
    "pre-push": "npm run all-check"
  },
  "dependencies": {
    "@astrojs/react": "^3.3.1",
    "@astrojs/sitemap": "^3.1.4",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@fontsource-variable/jetbrains-mono": "^5.0.21",
    "@fontsource-variable/open-sans": "^5.0.29",
    "@mui/joy": "^5.0.0-beta.2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "astro": "^4.7.0",
    "bootstrap-icons": "^1.11.3",
    "classnames": "^2.5.1",
    "color-hash": "^2.0.2",
    "luxon": "^3.4.4",
    "prism-themes": "^1.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark-youtube": "^1.3.2",
    "sharp": "^0.33.3",
    "web-vitals": "^3.5.2",
    "workbox-cacheable-response": "^7.1.0",
    "workbox-core": "^7.0.0",
    "workbox-routing": "^7.1.0",
    "workbox-strategies": "^7.1.0",
    "workbox-window": "^7.1.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^2.1.1",
    "@csstools/postcss-oklab-function": "^3.0.14",
    "@types/color-hash": "^1.0.5",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.7",
    "@typescript-eslint/parser": "^7.7.1",
    "astro-eslint-parser": "^0.16.3",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.2.2",
    "knip": "^5.11.0",
    "postcss-html": "^1.6.0",
    "postcss-load-config": "^5.0.3",
    "postcss-preset-env": "^9.5.9",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "pwa-asset-generator": "^6.3.1",
    "stylelint": "^16.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.4.5"
  }
}

{
  "name": "pkolt_web_site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "start": "astro dev --port 3007",
    "build": "astro build",
    "preview": "astro preview --port 3008",
    "check-ts": "tsc --noEmit",
    "eslint": "eslint --ext .tsx,.ts,.astro src",
    "eslint-fix": "npm run eslint -- --fix",
    "stylelint": "stylelint 'src/**/*.css'",
    "stylelint-fix": "npm run stylelint -- --fix",
    "knip": "knip",
    "format": "prettier --check src",
    "format-fix": "prettier --write src",
    "lint-all": "npm run eslint && npm run format && npm run stylelint && npm run knip",
    "lint-all-fix": "npm run eslint-fix && npm run format-fix && npm run stylelint-fix",
    "prepare": "git config core.hooksPath .git-hooks",
    "pre-push": "npm run check-ts && npm run lint-all"
  },
  "dependencies": {
    "@astrojs/react": "^3.6.2",
    "@astrojs/sitemap": "^3.1.6",
    "@fontsource-variable/jetbrains-mono": "^5.0.22",
    "@fontsource-variable/open-sans": "^5.0.30",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "astro": "^4.15.2",
    "bootstrap-icons": "^1.11.3",
    "classnames": "^2.5.1",
    "color-hash": "^2.0.2",
    "luxon": "^3.5.0",
    "prism-themes": "^1.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark-youtube": "^1.3.2",
    "sharp": "^0.33.5",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^2.1.1",
    "@csstools/postcss-oklab-function": "^3.0.19",
    "@types/color-hash": "^1.0.5",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.16.3",
    "@typescript-eslint/parser": "^7.18.0",
    "astro-eslint-parser": "^1.0.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.3.0",
    "knip": "^5.29.1",
    "postcss-html": "^1.7.0",
    "postcss-load-config": "^5.1.0",
    "postcss-preset-env": "^9.6.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.9.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.5.4"
  }
}

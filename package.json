{
  "name": "pkolt_web_site",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "dev": "next dev",
    "preview": "serve -l 4444 out",
    "build": "next build",
    "build-analyze": "ANALYZE=true next build",
    "build-sw": "esbuild ./src/service-worker.ts ./src/service-worker-register.ts --bundle --minify --tsconfig=tsconfig.sw.json --outdir=./out --banner:js=//ver.`date +%s`",
    "lint": "next lint",
    "ls-lint": "ls-lint",
    "format": "prettier --check src",
    "format-fix": "prettier --write src",
    "knip": "knip",
    "stylelint": "stylelint 'src/**/*.css'",
    "stylelint-fix": "stylelint --fix 'src/**/*.css'",
    "lint-all": "npm run lint && npm run ls-lint && npm run format && npm run knip && npm run stylelint",
    "prepare": "husky install",
    "pre-commit": "npm run lint-all"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^13.4.6",
    "@types/node": "^18.16.18",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "classnames": "^2.3.2",
    "color-hash": "^2.0.2",
    "eslint": "^8.43.0",
    "eslint-config-next": "^13.4.6",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.8.0",
    "luxon": "^3.3.0",
    "next": "^13.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "remark-gfm": "^3.0.1",
    "remark-youtube": "^1.2.1",
    "slugify": "^1.6.6",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-window": "^7.0.0",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^1.0.3",
    "@ls-lint/ls-lint": "^2.0.0",
    "@svgr/webpack": "^8.0.1",
    "@types/color-hash": "^1.0.2",
    "@types/luxon": "^3.3.0",
    "esbuild": "^0.18.6",
    "husky": "^8.0.3",
    "knip": "^2.14.1",
    "postcss-preset-env": "^8.5.0",
    "prettier": "^2.8.8",
    "serve": "^14.2.0",
    "stylelint": "^15.8.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^5.1.3"
  }

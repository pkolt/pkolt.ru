{
  "name": "pkolt_web_site",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "dev": "next dev",
    "preview": "serve -l 4444 out",
    "build": "npm run build-next && npm run build-sw",
    "build-next": "next build",
    "build-analyze": "ANALYZE=true npm run build-next",
    "build-sw": "esbuild ./src/service-worker.ts ./src/service-worker-register.ts --bundle --minify --tsconfig=tsconfig.sw.json --outdir=./out --banner:js=//ver.`date +%s`",
    "pwa-splash": "pwa-asset-generator ./public/images/pwa/512.png ./public/images/pwa/splash --background \"#ffffff\" --index ./src/pwa.html --path-override /images/pwa/splash --portrait-only --splash-only --no-sandbox",
    "lint": "next lint",
    "ls-lint": "ls-lint",
    "format": "prettier --check src",
    "format-fix": "prettier --write src",
    "knip": "knip",
    "stylelint": "stylelint 'src/**/*.css'",
    "stylelint-fix": "stylelint --fix 'src/**/*.css'",
    "lint-all": "npm run lint && npm run ls-lint && npm run format && npm run knip && npm run stylelint",
    "prepare": "husky install",
    "pre-commit": "npm run lint-all"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^13.4.12",
    "@types/node": "^18.17.1",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "classnames": "^2.3.2",
    "color-hash": "^2.0.2",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.12",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.8.0",
    "luxon": "^3.3.0",
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "remark-gfm": "^3.0.1",
    "remark-youtube": "^1.3.0",
    "slugify": "^1.6.6",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-window": "^7.0.0",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^2.0.1",
    "@csstools/postcss-oklab-function": "^3.0.1",
    "@ls-lint/ls-lint": "^2.0.1",
    "@svgr/webpack": "^8.0.1",
    "@types/color-hash": "^1.0.2",
    "@types/luxon": "^3.3.1",
    "esbuild": "^0.18.17",
    "husky": "^8.0.3",
    "knip": "^2.17.1",
    "postcss-preset-env": "^9.1.0",
    "prettier": "^3.0.0",
    "pwa-asset-generator": "^6.3.1",
    "serve": "^14.2.0",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.1.6"
  }
}

{
  "name": "pkolt_web_site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "dev": "astro dev --port 3007",
    "start": "npm run dev",
    "remove-origin-images": "node ./scripts/remove_origin_images.js",
    "build": "astro build && npm run build-sw && npm run remove-origin-images",
    "preview": "astro preview --port 3008",
    "build-sw": "esbuild ./src/service-worker.ts ./src/service-worker-register.ts --bundle --minify --tsconfig=tsconfig.sw.json --outdir=./out --banner:js=//ver.`date +%s`",
    "pwa-splash": "pwa-asset-generator ./public/images/pwa/512.png ./public/images/pwa/splash --background \"#ffffff\" --index ./src/pwa.html --path-override /images/pwa/splash --portrait-only --splash-only --no-sandbox",
    "format": "prettier --check src",
    "format-fix": "prettier --write src",
    "check-ts": "tsc --noEmit",
    "knip": "knip",
    "lint": "eslint --ext .tsx,.ts,.astro src",
    "lint-fix": "npm run lint -- --fix",
    "stylelint": "stylelint 'src/**/*.css'",
    "stylelint-fix": "stylelint --fix 'src/**/*.css'",
    "lint-all": "npm run check-ts && npm run lint && npm run format && npm run stylelint && npm run knip",
    "prepare": "husky install",
    "pre-commit": "npm run lint-all"
  },
  "dependencies": {
    "@astrojs/mdx": "^0.19.7",
    "@astrojs/react": "^2.2.2",
    "@astrojs/sitemap": "^2.0.2",
    "@fontsource-variable/jetbrains-mono": "^5.0.9",
    "@fontsource-variable/open-sans": "^5.0.9",
    "@types/node": "^18.17.5",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "astro": "^2.10.9",
    "classnames": "^2.3.2",
    "color-hash": "^2.0.2",
    "luxon": "^3.4.0",
    "prism-themes": "^1.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-youtube": "^1.3.0",
    "sharp": "^0.32.5",
    "slugify": "^1.6.6",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-window": "^7.0.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^2.0.1",
    "@csstools/postcss-oklab-function": "^3.0.1",
    "@types/color-hash": "^1.0.2",
    "@types/luxon": "^3.3.1",
    "@typescript-eslint/parser": "^6.4.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.28.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.0.0",
    "husky": "^8.0.3",
    "knip": "^2.19.5",
    "postcss-html": "^1.5.0",
    "postcss-load-config": "^4.0.1",
    "postcss-preset-env": "^9.1.1",
    "prettier": "^3.0.2",
    "prettier-plugin-astro": "^0.11.1",
    "pwa-asset-generator": "^6.3.1",
    "stylelint": "^15.10.2",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.1.6"
  }
}

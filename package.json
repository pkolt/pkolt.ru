{
  "name": "pkolt_web_site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "dev": "astro dev --port 3007",
    "start": "npm run dev",
    "remove-origin-images": "node ./scripts/remove_origin_images.js",
    "build": "astro build && npm run build-sw && npm run remove-origin-images",
    "preview": "astro preview --port 3008",
    "build-sw": "esbuild ./src/service-worker.ts ./src/service-worker-register.ts --bundle --minify --tsconfig=tsconfig.sw.json --outdir=./out --banner:js=//ver.`date +%s`",
    "pwa-splash": "pwa-asset-generator ./public/images/pwa/512.png ./public/images/pwa/splash --background \"#ffffff\" --index ./src/pwa.html --path-override /images/pwa/splash --portrait-only --splash-only --no-sandbox",
    "check-ts": "tsc --noEmit",
    "lint-deps": "knip",
    "lint-js": "eslint --ext .tsx,.ts,.astro src",
    "lint-js-fix": "npm run lint-js -- --fix",
    "lint-css": "stylelint 'src/**/*.css'",
    "lint-css-fix": "npm run lint-css -- --fix",
    "lint-fmt": "prettier --check src",
    "lint-fmt-fix": "prettier --write src",
    "lint-all": "npm run lint-js && npm run lint-fmt && npm run lint-css && npm run lint-deps",
    "lint-all-fix": "npm run lint-js-fix && npm run lint-fmt-fix && npm run lint-css-fix",
    "prepare": "husky install",
    "pre-push": "npm run lint-all"
  },
  "dependencies": {
    "@astrojs/react": "^3.0.3",
    "@astrojs/sitemap": "^3.0.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource-variable/jetbrains-mono": "^5.0.16",
    "@fontsource-variable/open-sans": "^5.0.16",
    "@mui/joy": "^5.0.0-beta.2",
    "@types/node": "^18.18.4",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "astro": "^3.3.0",
    "bootstrap-icons": "^1.11.1",
    "classnames": "^2.3.2",
    "color-hash": "^2.0.2",
    "decimal.js": "^10.4.3",
    "luxon": "^3.4.3",
    "prism-themes": "^1.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "remark-youtube": "^1.3.0",
    "sharp": "^0.32.6",
    "slugify": "^1.6.6",
    "web-vitals": "^3.5.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-window": "^7.0.0",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^2.1.0",
    "@csstools/postcss-oklab-function": "^3.0.7",
    "@types/color-hash": "^1.0.2",
    "@types/luxon": "^3.3.2",
    "@typescript-eslint/parser": "^6.7.5",
    "astro-eslint-parser": "^0.16.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.1.0",
    "husky": "^8.0.3",
    "knip": "^2.33.3",
    "postcss-html": "^1.5.0",
    "postcss-load-config": "^4.0.1",
    "postcss-preset-env": "^9.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "pwa-asset-generator": "^6.3.1",
    "stylelint": "^15.10.3",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.2.2"
  }
}

    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.3",
    "sharp": "^0.33.5",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "zustand": "^5.0.3"

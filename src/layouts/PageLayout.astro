---
import RootLayout from './RootLayout.astro';

import type { RootLayoutProps } from '../types/layout';
type Props = RootLayoutProps;

const props = Astro.props;
---

<RootLayout {...props}>
  <main class="container">
    <slot />
  </main>
</RootLayout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    margin: var(--gap-3);
  }

  @media (--viewport-desktop) {
    .container {
      margin: var(--gap-3) 15%;
    }
  }
</style>
